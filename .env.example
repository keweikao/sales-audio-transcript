# 伺服器設定
NODE_ENV=production
PORT=3000

# Redis 設定 (Zeabur 會自動提供)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# 佇列設定
# 設定為 true 強制使用內存佇列 (不依賴 Redis)
FORCE_MEMORY_QUEUE=false

# 處理模式設定
# queue: 使用佇列處理 (預設)
# direct: 直接同步處理單個檔案 (不使用佇列)
# parallel: 並行處理多個檔案 (不使用佇列，適合少量檔案)
DEFAULT_PROCESSING_MODE=queue

# 並行處理設定
MAX_PARALLEL_FILES=3

# Google Services 設定
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project-id",...}
GOOGLE_SPREADSHEET_ID=your-spreadsheet-id

# Google Apps Script Webhook 設定
WEBHOOK_URL=https://script.google.com/macros/s/your-script-id/exec

# Faster-Whisper 模型設定
WHISPER_MODEL_SIZE=base

# 品質監控設定
QUALITY_THRESHOLD_SCORE=60
QUALITY_THRESHOLD_CONFIDENCE=0.6
CONSECUTIVE_FAILURES_THRESHOLD=3

# 處理設定
MAX_BATCH_SIZE=20
CONCURRENT_JOBS=1

# 音檔處理設定
AUDIO_CHUNK_DURATION=720
AUDIO_PREPROCESSING_BITRATE=96
AUDIO_PREPROCESSING_SAMPLE_RATE=24000

# 日誌設定
LOG_LEVEL=info
LOG_FILE=app.log

# 功能開關
ENABLE_IPHONE_OPTIMIZATION=true
ENABLE_QUALITY_MONITORING=true
ENABLE_SMART_SEGMENTATION=true